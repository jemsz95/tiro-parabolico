<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.itesm.tiroparabolico.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logoprepanetsolo"
        android:layout_marginTop="34dp"
        android:id="@+id/image_prepanet"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/text_login"
        android:layout_below="@+id/image_prepanet"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/buttonText_login"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:id="@+id/button_login"
        android:layout_width="250dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/button_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_info_grey_24dp" />

    <TextView
        android:text="Mail:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/text_login"
        android:layout_alignStart="@+id/text_login"
        android:id="@+id/text_mail" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_mail"
        android:layout_alignRight="@+id/text_mail"
        android:layout_alignEnd="@+id/text_mail"
        android:layout_marginTop="17dp"
        android:id="@+id/text_password" />

    <Button
        android:text="Sign in"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/button_login"
        android:id="@+id/button_login2"
        android:layout_alignRight="@+id/button_login"
        android:layout_alignEnd="@+id/button_login"
        android:layout_alignLeft="@+id/button_login"
        android:layout_alignStart="@+id/button_login" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/text_mail"
        android:layout_toEndOf="@+id/text_mail"
        android:id="@+id/editText_mail"
        android:hint="Ingresa tu mail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_password"
        android:layout_alignBaseline="@+id/text_password"
        android:layout_alignBottom="@+id/text_password"
        android:layout_toRightOf="@+id/text_password"
        android:layout_toEndOf="@+id/text_password"
        android:hint="Ingresa tu password" />

</RelativeLayout>
