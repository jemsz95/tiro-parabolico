<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="row"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/text_studentHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Student"
        android:textSize="12sp"
        android:layout_marginLeft="12dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/text_angleHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="Angle"
        android:textSize="12sp"
        android:layout_marginLeft="12dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/text_velocityHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Velocity"
        android:layout_marginLeft="12dp"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/text_heightHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Height"
        android:textSize="12sp"
        android:layout_marginLeft="12dp"
        android:textStyle="normal" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/button_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_star_border_24dp" />
</LinearLayout>
