<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_instrucciones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.itesm.tiroparabolico.InstruccionesActivity">


    <TextView
        android:id="@+id/text_title_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_instrucciones"
        android:hint="Instrucciones"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/button_skip"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_TextInstruct"
        android:textSize="24sp"
        android:layout_marginTop="22dp"
        android:textStyle="normal"
        android:layout_below="@+id/text_title_instructions"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp" />

    <Button
        android:id="@+id/button_skip"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/text_title_instructions"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/text_title_instructions"
        android:background="@color/colorPrimary"
        android:text="Simulador"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:visibility="visible" />

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView_foto"
        android:layout_width="300dp"
        android:layout_below="@+id/text_TextInstruct"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="280dp" />

</RelativeLayout>
