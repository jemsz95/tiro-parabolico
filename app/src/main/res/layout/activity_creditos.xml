<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_creditos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.itesm.tiroparabolico.CreditosActivity">

    <ImageView
        android:id="@+id/image_LogoPrepaNet"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text_CreditosTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_LogoPrepaNet"
        android:text="@string/titulo_creditos"
        android:hint="Creditos"/>

    <TextView
        android:id="@+id/text_CreditosCuerpo"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/cuerpo_creditos"
        android:layout_below="@+id/text_CreditosTitulo"/>

</RelativeLayout>
